@model E_mailSystem.Models.Plan

@{
    ViewData["Title"] = "Create";
}
@if (User.Identity.IsAuthenticated && User.Identity.Name == "admin123@gmail.com")
{


    <h1>Create</h1>

    <h4>Plan</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PlanName" class="control-label"></label>
                    <input asp-for="PlanName" class="form-control" />
                    <span asp-validation-for="PlanName" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Watermark" /> @Html.DisplayNameFor(model => model.Watermark)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Attachments" /> @Html.DisplayNameFor(model => model.Attachments)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Messages" class="control-label"></label>
                    <input asp-for="Messages" class="form-control" />
                    <span asp-validation-for="Messages" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Symbols" class="control-label"></label>
                    <input asp-for="Symbols" class="form-control" />
                    <span asp-validation-for="Symbols" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
else
{
    <h2 style="color:red">Вы не авторизованы!</h2>
    <a class="nav-link text-dark btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Личный кабинет</a>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
